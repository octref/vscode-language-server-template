{
  "name": "vscode-language-server-template",
  "displayName": "vscode-language-server-template",
  "description": "A cleaner template for writing VS Code language server.",
  "author": "Pine Wu <octref@gmail.com>",
  "version": "0.0.1",
  "publisher": "octref",
  "scripts": {
    "compile": "tsc -p tsconfig.json && tsc -p server/tsconfig.json",
    "watch-client": "tsc -w -p tsconfig.json",
    "watch-server": "tsc -w -p server/tsconfig.json",
    "watch": "concurrently \"npm run watch-client\" \"npm run watch-server\"",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "jest"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "dependencies": {
    "prettier": "^1.11.1",
    "vscode-languageclient": "^4.1.4",
    "vscode-languageserver-protocol": "^3.7.2",
    "vscode-languageserver-types": "^3.7.2"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/client/clientMain",
  "contributes": {},
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.4.6",
    "concurrently": "^3.5.1",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "vscode": "^1.1.11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
